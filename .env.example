# MAIA Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required Configuration
# =============================================================================

# Storage directory for BadgerDB and indices
MAIA_DATA_DIR=./data

# HTTP API port
MAIA_HTTP_PORT=8080

# gRPC API port
MAIA_GRPC_PORT=9090

# =============================================================================
# Optional Configuration
# =============================================================================

# Logging level: debug, info, warn, error
MAIA_LOG_LEVEL=info

# Log format: json, console
MAIA_LOG_FORMAT=console

# Default namespace for operations when not specified
MAIA_DEFAULT_NAMESPACE=default

# Default token budget for context assembly
MAIA_TOKEN_BUDGET=4000

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding model: local, openai, voyage
MAIA_EMBEDDING_MODEL=local

# OpenAI API key (required if MAIA_EMBEDDING_MODEL=openai)
# MAIA_OPENAI_API_KEY=sk-...

# Voyage API key (required if MAIA_EMBEDDING_MODEL=voyage)
# MAIA_VOYAGE_API_KEY=...

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum concurrent requests
MAIA_MAX_CONCURRENT_REQUESTS=100

# Request timeout in seconds
MAIA_REQUEST_TIMEOUT=30

# Enable request tracing
MAIA_ENABLE_TRACING=false

# =============================================================================
# Security Configuration
# =============================================================================

# API authentication (optional)
# MAIA_API_KEY=your-secret-api-key

# Enable TLS (set paths if enabled)
MAIA_ENABLE_TLS=false
# MAIA_TLS_CERT_PATH=/path/to/cert.pem
# MAIA_TLS_KEY_PATH=/path/to/key.pem

# CORS allowed origins (comma-separated)
MAIA_CORS_ORIGINS=*

# =============================================================================
# Proxy Configuration (OpenAI-compatible proxy)
# =============================================================================

# Backend LLM API URL
# MAIA_PROXY_BACKEND=https://api.openai.com/v1

# Automatically remember conversations
MAIA_PROXY_AUTO_REMEMBER=true

# Automatically inject context
MAIA_PROXY_AUTO_CONTEXT=true

# Context injection position: system, first_user, before_last
MAIA_PROXY_CONTEXT_POSITION=system
